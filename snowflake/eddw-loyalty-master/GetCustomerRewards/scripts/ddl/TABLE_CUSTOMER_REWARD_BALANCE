USE Database <<EDM_DB_NAME>>;
USE Schema DW_C_LOYALTY;

create or replace TABLE CUSTOMER_REWARD_BALANCE (
	HOUSEHOLD_ID NUMBER(38,0) NOT NULL,
	BALANCE_UPDATE_TS TIMESTAMP_LTZ(9) NOT NULL,
	DW_FIRST_EFFECTIVE_DT DATE NOT NULL,
	DW_LAST_EFFECTIVE_DT DATE NOT NULL,
	REWARD_ORIGIN_CD VARCHAR(20),
	REWARD_ORIGIN_DSC VARCHAR(50),
	REWARD_DOLLAR_POINT_QTY NUMBER(38,0),
	REWARD_TOKEN_POINT_QTY NUMBER(38,0),
	REWARD_TOKEN_POINT_EXPIRY_QTY NUMBER(38,0),
	REWARD_DOLLAR_START_TS TIMESTAMP_LTZ(9),
	REWARD_DOLLAR_END_TS TIMESTAMP_LTZ(9),
	REWARD_TOKEN_END_TS TIMESTAMP_LTZ(9),
	REWARD_TOKEN_WILL_EXPIRY_END_TS TIMESTAMP_LTZ(9),
	DW_CREATE_TS TIMESTAMP_LTZ(9),
	DW_LAST_UPDATE_TS TIMESTAMP_LTZ(9),
	DW_LOGICAL_DELETE_IND BOOLEAN,
	DW_SOURCE_CREATE_NM VARCHAR(255),
	DW_SOURCE_UPDATE_NM VARCHAR(255),
	DW_CURRENT_VERSION_IND BOOLEAN,
	primary key (HOUSEHOLD_ID, BALANCE_UPDATE_TS, DW_FIRST_EFFECTIVE_DT, DW_LAST_EFFECTIVE_DT)
)COMMENT='Represents the start and end of the Rewards dollar amount points.\nRepresents the start and end of the Rewards token and token that will expire points.'
;
