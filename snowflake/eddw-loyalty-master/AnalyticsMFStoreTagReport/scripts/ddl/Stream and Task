Use database EDM_CONFIRMED_PRD;
Use schema DW_APPL;

// Create Stream 
CREATE OR REPLACE STREAM MF_STORE_TAG_REPORT_Stream ON TABLE EDM_CONFIRMED_PRD.DW_C_PRODUCT.OFFEROMS_FLAT; 

//Create Task
CREATE OR REPLACE TASK MF_STORE_TAG_REPORT_Task
WAREHOUSE = 'EDM_ADMIN_WH'
SCHEDULE = '1 minutes'
WHEN
SYSTEM$STREAM_HAS_DATA('EDM_CONFIRMED_PRD.DW_APPL.MF_STORE_TAG_REPORT_Stream')
AS
call EDM_CONFIRMED_PRD.DW_APPL.SP_LOAD_MF_STORE_TAG_REPORT();

//Task Resume
ALTER task MF_STORE_TAG_REPORT_Task resume ;
